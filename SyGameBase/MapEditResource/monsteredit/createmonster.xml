<code name="OnCreate1">
	<setpanel name="dir" content="零"/><!--设置条目属性-->
</code>
<code name="doCreateList">
	<additem name="direditmonster_item" onCreate="doCreate1"/> <!--创建条目0-->
	<additem name="direditmonster_item"/> <!--创建条目1-->
	<additem name="direditmonster_item"/> <!--创建条目2-->

	<panelbind name="createmonster" btnname="ok" event=""/> <!--绑定内部逻辑-->
</code>
<code name="doAddFrames">
	<panelshow name="add_monster_frames" model="true"/><!--展示新的panel-->
</code>

<code name="doHideMe">
	<hidepanel name="createmonster"/> <!--创建monster-->
</code>
<Config>
	<!--场景主界面 local= 1 时置顶 2 时x轴中间对齐 4 置底 8 右对齐 16 左对齐 32 Y轴对齐-->
	<panel name="createmonster" x="0" y="200" w="450" h="450"  local="2" backimg="panel_back.png" moveable="true">
		<panel uniquename="extinfo" moveable="false" x="" y="60">
			<list uniquename="list" scrollable="true" eachwidth="200" eachheight="178" leftspan="10" upspan="2" x="0" y="0" onCreate="doCreateList"> <!--每个方向-->
				<face viewx="-180" viewy="-220" vieww="250" viewh="300" back="viewback.png"/>
			</list>
			<button uniquename="addframe" x="150" y="-180" w="64" h="32" name="增加帧" downimg="btn_common_down.png"
				upimg="btn_common_up.png" r="255" g="0" b="" desc="" fontsize="24" onClick="doAddFrames"/>
		</panel>
		<button uniquename="ok" x="-44" y="-200" w="64" h="32" name="确定" downimg="btn_common_down.png"
				upimg="btn_common_up.png" r="255" g="0" b="" desc="" fontsize="24"/>
		<button uniquename="cancel" x="44" y="-200" w="64" h="32" name="取消" downimg="btn_common_down.png"
				upimg="btn_common_up.png" r="255" g="0" b="" desc="" fontsize="24" onClick="doHideMe"/>
	</panel>
</Config>